<h3>Search Sales</h3>
<form action="<%= properties_url %>" method="GET">
  <%= auth_token %>

  <label>
    Address
    <input type="text" name="property[address]" value="">
  </label>
  <br>
  <label>
    Zip
    <input type="text" name="property[zip]" value="">
  </label>
  <br>
  <label for="borough-select">Borough</label>
  <select name="property[borough]" id="borough-select">
		<option value="">(Choose one)</option>
		<% borough_choices.each do |key, value| %>
			<option value="<%= key %>" <%= "Selected" if key.to_s == @property.borough %>>
				<%= value %>
			</option>
		<% end %>
  </select>
  <br>
  <label for="neighborhood-select">Neighborhood</label>
  <select name="property[neighborhood]" id="neighborhood-select">
    <option value="">(Choose one)</option>
		<% all_neighborhoods.each do |neighborhood| %>
			<option value="<%= neighborhood %>" <%= "Selected" if neighborhood == @property.neighborhood %>>
				<%= neighborhood.split(" ").map(&:capitalize).join(" ") %>
			</option>
		<% end %>
  </select>
  <br>
  <label>
    Min Price
    <input type="number" name="property[min_price]" value="">
  </label>
  <br>
  <label>
    Max Price
    <input type="number" name="property[max_price]" value="">
  </label>
  <br>
  <label>
    Beds
    <input type="number" name="property[beds]" value="">
  </label>
  <br>
  <label>
    Baths
    <input type="text" name="property[baths]" value="">
  </label>
  <br>
  <label>
    Baths
    <input type="text" name="property[baths]" value="">
  </label>
  <br>
  <label>
    Square Footage
    <input type="number" name="property[sq_ft]" value="<%= @property.sq_ft %>">
  </label>
  <br>
  <label for="apt-type-select">Apartment Type</label>
    <select name="property[apt_type]" id="apt-type-select">
			<option value="">(Choose one)</option>
			<% all_apt_types.each do |apt_type| %>
				<option value="<%= apt_type %>" <%= "Selected" if apt_type == @property.apt_type %>>
					<%= apt_type.split(" ").map(&:capitalize).join(" ") %>
				</option>
			<% end %>
  </select>
  <br>
  <button>Submit</button>
</form>