<h2 class="title">New York City Real Estate</h2>

<form action="<%= properties_url %>" method="GET">
  <%= auth_token %>
	<div class="search">
	<ul class="group">
<li class="search-element">
  <label for="search-address">ADDRESS</label>
  <input type="text" name="property[address]" value="" class="big-search-input" id="search-address">
</li>
	<li class="search-element">
  <label for="search-zip">ZIP</label>
  <input type="text" name="property[zip]" value="" class="small-search-input" id="search-id">
</li>
<li class="search-element">
  <label for="borough-select" for="borough-select">BOROUGH</label>
  <select name="property[borough]" id="borough-select" class="small-search-input">
		<option value="">(Choose one)</option>
		<% borough_choices.each do |key, value| %>
			<option value="<%= key %>" <%= "Selected" if key.to_s == @property.borough %>>
				<%= value %>
			</option>
		<% end %>
  </select>
</li>
<li class="search-element">
  <label for="neighborhood-select">NEIGHBORHOOD</label>
  <select name="property[neighborhood]" id="neighborhood-select" class="small-search-input">
    <option value="">(Choose one)</option>
		<% all_neighborhoods.each do |neighborhood| %>
			<option value="<%= neighborhood %>" <%= "Selected" if neighborhood == @property.neighborhood %>>
				<%= neighborhood.split(" ").map(&:capitalize).join(" ") %>
			</option>
		<% end %>
  </select>
</li>
<li class="search-element">
  <label for="search-min-price">MIN PRICE</label>
  <input type="number" name="property[min_price]" value="" class="small-search-input" id="search-min-price">
</li>
<li class="search-element">
  <label for="search-max-price">MAX PRICE</label>
  <input type="number" name="property[max_price]" value="" class="small-search-input" id="search-max-price">
</li>
<li class="search-element">
  <label for="search-beds">BEDS</label>
  <input type="number" name="property[beds]" value="" class="small-search-input" id="search-beds">
</li>
<li class="search-element">
  <label for="search-baths">BATHS</label>
    <input type="text" name="property[baths]" value="" class="small-search-input" id="search-baths">
</li>
<li class="search-element">
  <label for="search-sq-ft">SQUARE FEET</label>
    <input type="number" name="property[sq_ft]" value="<%= @property.sq_ft %>" class="small-search-input" id="search-sq-ft">
</li>
<li class="search-element">
  <label for="apt-type-select">TYPE</label>
    <select name="property[apt_type]" id="apt-type-select" class="small-search-input">
			<option value="">(Choose one)</option>
			<% all_apt_types.each do |apt_type| %>
				<option value="<%= apt_type %>" <%= "Selected" if apt_type == @property.apt_type %>>
					<%= apt_type.split(" ").map(&:capitalize).join(" ") %>
				</option>
			<% end %>
  </select>
</li>
<li class="search-element">
  <button class="search-button">SEARCH</button>
</li>
</ul>
	</div>
</form>
